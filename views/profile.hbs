<div class="container">
    <div class="infor-text">
        <h2 class="mt-3">Account Information</h2>
        <hr>
        <p><strong>Username:</strong> {{user.username}}</p>
        <hr>
        <p><strong>Name:</strong> {{user.name}}</p>
        <hr>
        <p><strong>Email:</strong> {{user.email}}</p>
        <button id="logout-button" class="btn btn-primary">Logout</button>
    </div>
   

    <h2 class="mt-3">Favorite Movies</h2>
    <div class="row">
        {{#each favoriteMovies}}
            <div class="col-md-3">
                <div class="card mb-4 movie-card">
                    <a href="/movie/{{this.id}}" style="color: inherit; text-decoration: none;">
                        <img class="card-img-top custom-poster" src="{{this.img}}" alt="{{this.title}}">
                    </a>
                    <div class="card-body text-center p-2">
                        <h6 class="card-title m-0">{{this.title}}</h6>
                        <p class="card-text m-0">Rating: {{this.rating}}</p>
                    </div>
                    <button class="btn btn-danger remove-favorite mx-2 mb-2" data-movie-id="{{this.id}}">Remove</button>
                </div>
            </div>
        {{/each}}
        {{#unless favoriteMovies}}
            <p>No favorite movies yet.</p>
        {{/unless}}
    </div>
</div>